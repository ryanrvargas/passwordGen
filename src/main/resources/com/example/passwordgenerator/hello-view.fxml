<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.passwordgenerator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Password Generator" />
    <Button fx:id="generatePasswordButton" mnemonicParsing="false" onAction="#onGeneratePasswordButton" text="Button" />
    <Label fx:id="passwordDisplay" text="Password will appear here" />
    <TextArea fx:id="showAllPasswords" editable="false" prefWidth="200.0" />
    <Button fx:id="savePassword" mnemonicParsing="false" onAction="#onSavePassword" text="Save Password" />
    <Button fx:id="showAllPasswordsButton" mnemonicParsing="false" onAction="#onShowAllPasswordsButton" text="Show Passwords" />
</VBox>

